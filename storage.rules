
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin role
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }
    
    // Rules for tour images
    match /tours/{tourId}/{allPaths=**} {
      // Allow anyone to read images
      allow read: if true;
      
      // Allow only authenticated admins to write (upload, update, delete)
      allow write: if request.auth != null && isAdmin();
    }
    
    match /tours/{tourId}/{fileName} {
        // Validate file type and size on upload
        allow create: if request.auth != null && isAdmin()
                      && request.resource.contentType.matches('image/.*')
                      && request.resource.size < 100 * 1024 * 1024;
    }
    
    // Rules for blog images
    match /blog/{postId}/{allPaths=**} {
      // Allow anyone to read images
      allow read: if true;

      // Allow only authenticated admins to write (upload, update, delete)
      allow write: if request.auth != null && isAdmin();
    }

    match /blog/{postId}/{fileName} {
        // Validate file type and size on upload
        allow create: if request.auth != null && isAdmin()
                      && request.resource.contentType.matches('image/.*')
                      && request.resource.size < 100 * 1024 * 1024;
    }

    // Rules for feedback images
    match /feedback/{feedbackId}/{fileName} {
      // Allow anyone to read images for now, can be restricted later if needed
      allow read: if true;
      // Allow anyone to upload a photo with their feedback
      allow create: if request.resource.contentType.matches('image/.*')
                    && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
  }
}
