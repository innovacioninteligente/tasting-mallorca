
{
  "//": "This file is a blueprint used by Firebase Studio to provision and manage backend services. For more details, see the 'Firebase Usage Instructions' in the documentation.",
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the system.",
          "enum": [
            "customer",
            "guide",
            "admin"
          ]
        },
        "stripeCustomerId": {
            "type": "string",
            "description": "The user's Stripe customer ID."
        }
      },
      "required": ["name", "email", "role"]
    },
     "ItineraryItem": {
      "title": "Itinerary Item",
      "description": "Represents a single item in a tour's itinerary, which can be a stop or a travel leg.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["stop", "travel"] },
        "icon": { "type": "string" },
        "title": { "type": "object", "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } } },
        "duration": { "type": "string" },
        "activities": { "type": "object", "properties": { "en": { "type": "array", "items": {"type": "string"} }, "de": { "type": "array", "items": {"type": "string"} }, "fr": { "type": "array", "items": {"type": "string"} }, "nl": { "type": "array", "items": {"type": "string"} } } }
      },
      "required": ["id", "type", "title", "duration"]
    },
    "PickupPoint": {
        "title": "Pickup Point",
        "description": "Represents the main pickup information for a tour.",
        "type": "object",
        "properties": {
            "title": { "type": "object", "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } } },
            "description": { "type": "object", "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } } }
        },
        "required": ["title", "description"]
    },
    "Tour": {
      "title": "Tour",
      "description": "Represents a tour offered by the company, with multilingual content.",
      "type": "object",
      "properties": {
        "slug": {
          "type": "object",
          "description": "URL-friendly slugs for each language.",
          "properties": {
            "en": { "type": "string" },
            "de": { "type": "string" },
            "fr": { "type": "string" },
            "nl": { "type": "string" }
          }
        },
        "title": {
          "type": "object",
          "description": "The title of the tour in multiple languages.",
           "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } }
        },
        "description": {
          "type": "object",
          "description": "A short description for tour cards, in multiple languages.",
           "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } }
        },
        "price": {
          "type": "number",
          "description": "Base price per person in cents."
        },
        "region": {
          "type": "string",
          "description": "Geographical region of the tour in Mallorca.",
          "enum": ["North", "East", "South", "West", "Central"]
        },
        "mainImage": { "type": "string", "format": "uri" },
        "galleryImages": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "durationHours": { "type": "number" },
        "overview": {
          "type": "object",
          "description": "General overview of the tour in multiple languages.",
           "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } }
        },
        "generalInfo": {
          "type": "object",
          "description": "General information about the tour in multiple languages.",
          "properties": {
            "cancellationPolicy": { "type": "object", "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } } },
            "bookingPolicy": { "type": "object", "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } } },
            "guideInfo": { "type": "object", "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } } },
            "pickupInfo": { "type": "object", "properties": { "en": { "type": "string" }, "de": { "type": "string" }, "fr": { "type": "string" }, "nl": { "type": "string" } } }
          }
        },
        "pickupPoint": {
            "$ref": "#/entities/PickupPoint"
        },
        "itinerary": {
            "type": "array",
            "description": "The detailed itinerary of the tour, composed of stops and travel legs.",
            "items": { "$ref": "#/entities/ItineraryItem" }
        },
        "availabilityPeriods": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "startDate": { "type": "string", "format": "date" },
              "endDate": { "type": "string", "format": "date" },
              "activeDays": { "type": "array", "items": { "type": "string", "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"] } }
            }
          }
        },
        "isFeatured": {
            "type": "boolean",
            "description": "Whether the tour is featured on the homepage."
        },
        "published": {
            "type": "boolean",
            "description": "Whether the tour is published and visible to customers."
        },
        "allowDeposit": {
          "type": "boolean",
          "description": "Whether this tour allows booking with a deposit."
        },
        "depositPrice": {
          "type": "number",
          "description": "The deposit amount required for booking, in cents. Only applicable if allowDeposit is true."
        }
      },
      "required": ["slug", "title", "price", "region", "published", "pickupPoint"]
    },
    "Booking": {
      "title": "Booking",
      "description": "Represents a user's booking for a tour.",
      "type": "object",
      "properties": {
        "tourId": { "type": "string" },
        "userId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "participants": { "type": "number" },
        "totalPrice": { "type": "number" },
        "amountPaid": { "type": "number" },
        "amountDue": { "type": "number" },
        "paymentType": { "type": "string", "enum": ["deposit", "full"] },
        "status": { "type": "string", "enum": ["pending", "confirmed", "cancelled"] },
        "ticketStatus": { "type": "string", "enum": ["valid", "redeemed", "expired"], "description": "The validation status of the ticket." },
        "language": { "type": "string" },
        "hotelId": { "type": "string" },
        "hotelName": { "type": "string" },
        "meetingPointId": { "type": "string" },
        "meetingPointName": { "type": "string" },
        "customerName": { "type": "string", "description": "The full name of the customer who made the booking." },
        "customerEmail": { "type": "string", "format": "email", "description": "The email address of the customer." },
        "customerPhone": { "type": "string", "description": "The phone number of the customer." }
      },
      "required": ["tourId", "userId", "date", "participants", "totalPrice", "status", "ticketStatus", "customerName", "customerEmail"]
    },
    "Payment": {
        "title": "Payment",
        "description": "Represents a payment for a booking.",
        "type": "object",
        "properties": {
            "bookingId": { "type": "string" },
            "stripePaymentIntentId": { "type": "string" },
            "amount": { "type": "number" },
            "currency": { "type": "string" },
            "status": { "type": "string", "enum": ["succeeded", "failed", "pending"] }
        },
        "required": ["bookingId", "stripePaymentIntentId", "amount", "status"]
    },
    "Invoice": {
        "title": "Invoice",
        "description": "Represents an invoice for a booking.",
        "type": "object",
        "properties": {
            "bookingId": { "type": "string" },
            "userId": { "type": "string" },
            "issueDate": { "type": "string", "format": "date-time" },
            "pdfUrl": { "type": "string", "format": "uri" },
            "details": { "type": "object" }
        },
        "required": ["bookingId", "userId", "issueDate"]
    },
    "Hotel": {
        "title": "Hotel",
        "description": "Represents a hotel with its location and pickup details.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "address": { "type": "string" },
            "region": { "type": "string", "enum": ["North", "East", "South", "West", "Central"] },
            "subRegion": { "type": "string" },
            "latitude": { "type": "number" },
            "longitude": { "type": "number" },
            "assignedMeetingPointId": { "type": "string", "description": "The ID of the MeetingPoint assigned to this hotel." }
        },
        "required": ["name", "region", "latitude", "longitude"]
    },
    "MeetingPoint": {
        "title": "Meeting Point",
        "description": "A specific location where tour participants are picked up.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "address": { "type": "string" },
            "region": { "type": "string", "enum": ["North", "East", "South", "West", "Central"] },
            "googleMapsUrl": { "type": "string", "format": "uri" },
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
        },
        "required": ["name", "region", "latitude", "longitude"]
    },
    "PrivateTourRequest": {
        "title": "Private Tour Request",
        "description": "Represents a customer's request for a private, tailor-made tour.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" },
            "nationality": { "type": "string" },
            "hotel": { "type": "string" },
            "preferredDate": { "type": "string", "format": "date" },
            "participants": { "type": "number" },
            "preferredLanguage": { "type": "string" },
            "visitPreferences": { "type": "array", "items": { "type": "string" } },
            "additionalComments": { "type": "string" },
            "submittedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["name", "email", "hotel", "participants", "submittedAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profiles for all users."
    },
    "/tours/{tourId}": {
      "schema": { "$ref": "#/entities/Tour" },
      "description": "Stores all available tours."
    },
    "/bookings/{bookingId}": {
      "schema": { "$ref": "#/entities/Booking" },
      "description": "Stores all bookings made by users."
    },
     "/payments/{paymentId}": {
      "schema": { "$ref": "#/entities/Payment" },
      "description": "Stores all payments."
    },
     "/invoices/{invoiceId}": {
      "schema": { "$ref": "#/entities/Invoice" },
      "description": "Stores all invoices."
    },
    "/hotels/{hotelId}": {
        "schema": { "$ref": "#/entities/Hotel" },
        "description": "Stores all registered hotels."
    },
    "/meetingPoints/{meetingPointId}": {
        "schema": { "$ref": "#/entities/MeetingPoint" },
        "description": "Stores all available tour meeting points."
    },
    "/privateTourRequests/{requestId}": {
        "schema": { "$ref": "#/entities/PrivateTourRequest" },
        "description": "Stores all customer requests for private tours."
    }
  }
}
